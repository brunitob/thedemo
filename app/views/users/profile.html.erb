<h2>Profile</h2>

 

    <div class="form-group">
        <%= image_tag(@user.avatar.url(:thumb), class: 'avatar') %>
    </div>


    <div class="form-group">
        <h3><%= @user.full_name %></h3>
    </div>
    <div class="form-group">
        <%= content_tag(:li, ("Age: " + distance_of_time_in_words(Time.now, @user.date_of_birth) + " old")) unless @user.date_of_birth.blank? %>
    </div>
	<div class="form-group">
        <%= content_tag(:li, ("Email: " + @user.email)) unless @user.email.blank? %>
    </div>   
    <div class="form-group">
        <%= content_tag(:li, ("location: " + @user.location)) unless @user.location.blank? %>
    </div>   
     <div class="form-group">
        <%= content_tag(:li, ("lookingfor: " + @user.lookingfor)) unless @user.lookingfor.blank? %>
    </div>   
        
            
            