   
            
<div class="row profile">
    <div class="col-sm-4 col-md-3">
         <div class="form-group">
        <%= image_tag(@user.avatar.url(:medium), class: 'avatar') %>
    </div>
    <div class="form-group">
        <h3><%= @user.full_name %></h3>
    </div>
    <div class="form-group">
        <%= content_tag(:li, ("Age: " + distance_of_time_in_words(Time.now, @user.date_of_birth) + " old")) unless @user.date_of_birth.blank? %>
    </div>
    <div class="form-group">
        <%= content_tag(:li, ("Email: " + @user.email)) unless @user.email.blank? %>
    </div>   
    <div class="form-group">
        <%= content_tag(:li, ("location: " + @user.location)) unless @user.location.blank? %>
    </div>   
     <div class="form-group">
        <%= content_tag(:li, ("lookingfor: " + @user.lookingfor)) unless @user.lookingfor.blank? %>
    </div>  
    <div class="form-group">
        <li>Total endorsers: <%= @user.followers_count %></li>
    </div>  
       
    </div>
    <div class="feed">
        <div>
            <h3>Get more endorsers!</h3>
        </div>
        <table class="table table-striped">
            <% @user.followers.each do |f| %>
                <tr>
                  <td><%= image_tag(f.avatar.url(:thumb), class: 'avatar')%></td>
                  <td><%= f.full_name %><br><%= f.email %></td>
                </tr>  
            <% end %>
        </table>
    </div>
</div>